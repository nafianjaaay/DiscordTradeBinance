# Discord to Binance Auto-Trading Bot v2.1 Configuration

# ============== DISCORD SETTINGS ==============
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CHANNEL_ID=123456789012345678

# ============== BINANCE SETTINGS ==============
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
USE_TESTNET=true

# ============== RISK MANAGEMENT ==============
# Risk mode: FIXED (fixed USDT amount) or PERCENT (% of account balance)
RISK_MODE=PERCENT

# For FIXED mode: Risk this many USDT per trade
RISK_PER_TRADE_USDT=10

# For PERCENT mode: Risk this % of account balance per trade
RISK_PERCENT_PER_TRADE=2

# Maximum position size (used by both modes)
MAX_POSITION_SIZE_USDT=100
MAX_POSITION_SIZE_PERCENT=10

# Maximum concurrent positions
MAX_OPEN_POSITIONS=3

# ============== TRADING PARAMETERS ==============
# Enable actual trading (false = simulation mode)
ENABLE_TRADING=false

# Default leverage for positions
DEFAULT_LEVERAGE=5

# ============== SAFETY SETTINGS ==============
# Required keyword in signal message
REQUIRED_SIGNAL_KEYWORD=ATLAS-7 SIGNAL

# Minimum risk-reward ratio to accept signal
MIN_RISK_REWARD=2.0

# Maximum slippage allowed (percentage)
MAX_SLIPPAGE_PERCENT=0.5

# ============== PERSISTENCE ==============
# SQLite database file for state persistence
PERSISTENCE_FILE=bot_state.db

# ============== LOGGING ==============
LOG_LEVEL=INFO
LOG_FILE=trading_bot.log

# ============== MONITORING (Optional) ==============
# Discord webhook URL for monitor alerts (used by monitor.py)
MONITOR_WEBHOOK_URL=https://discord.com/api/webhooks/xxx/yyy
