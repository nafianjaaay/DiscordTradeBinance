# Discord to Binance Auto-Trading Bot Configuration
# Copy this file to .env and fill in your actual values

# ============== DISCORD SETTINGS ==============
# Your Discord bot token
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Discord channel ID to monitor (right-click channel -> Copy ID)
DISCORD_CHANNEL_ID=123456789012345678

# ============== BINANCE SETTINGS ==============
# Your Binance API credentials
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Use testnet for testing (true/false)
# Testnet: https://testnet.binancefuture.com
USE_TESTNET=true

# ============== TRADING PARAMETERS ==============
# Enable actual trading (false = simulation mode)
ENABLE_TRADING=false

# Default leverage for positions
DEFAULT_LEVERAGE=5

# Risk per trade in USDT (amount to risk if stop loss hits)
RISK_PER_TRADE_USDT=10

# Maximum position size in USDT
MAX_POSITION_SIZE_USDT=100

# Maximum number of open positions allowed
MAX_OPEN_POSITIONS=3

# ============== SAFETY SETTINGS ==============
# Required keyword in signal message
REQUIRED_SIGNAL_KEYWORD=ATLAS-7 SIGNAL

# Minimum risk-reward ratio to accept signal
MIN_RISK_REWARD=2.0

# Maximum slippage allowed (percentage)
MAX_SLIPPAGE_PERCENT=0.5

# ============== LOGGING ==============
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log file name
LOG_FILE=trading_bot.log
